
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  name String?
}
model Chat {
  id Int @id @default(autoincrement())
  name String
  messages Message[]
}
model Message {
  id Int @id @default(autoincrement())
content String
senderId Int
receiverId Int
  createdAt DateTime @default(now())

  Chat Chat[]
}